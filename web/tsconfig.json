{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./",
    "typeRoots": [
      "./scripts/types/*.d.ts",
      "./scripts/types/**/*.d.ts"
    ]
  },
  "compileOnSave": true,
  "include": [ 
    "./**/*.ts", 
    "./*.ts"
  ],
  "exclude": [],
  "typeAcquisition": {
    "enable": true,
    "include": ["lodash"]
  }
}
